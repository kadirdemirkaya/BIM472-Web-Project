@using BlogWeb.Mvc.Models.ViewModels
 @model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Glassmorphism login Form Tutorial in html css</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
    <style media="screen">
        /* tüm eleanların elementleri (pseudo-elementler)*/
        *,
        *:before,
        *:after {
            padding: 0;
            margin: 0;
            box-sizing: border-box; /* elemanın genişlik ve yükseklik değerlerini */
        }

        /* gövde özelliği */
        body {
            background-color: #080710;
        }

        /* div'in özellikleri */
        .background {
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%,-50%); /* Elemanın kendisini, genişliğinin ve yüksekliğinin yarısı kadar sola ve yukarıya kaydırır.
                                 */
            top: 50%; /* üst kenarını, ana elemanın yüksekliğinin ortasına yerleştirir */
            left: 50%; /* sol kenarını, ana elemanın genişliğinin ortasına yerleştirir */
        }

            /* container içindeki shape class'ının özelliği */
            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }

        /* yuvarlak tasarımın özellikleri */
        .shape:first-child {
            background: linear-gradient( #1845ad, #23a2f6 );
            left: -80px;
            top: -80px;
        }

        .shape:last-child {
            background: linear-gradient( to right, #ff512f, #f09819 );
            right: -30px;
            bottom: -80px;
        }

        /* from ve inputların özellikleri*/
        form {
            height: 470px;
            width: 400px;
            background-color: rgba(255,255,255,0.13);
            position: absolute; /* belge akışında nasıl yerleştirileceğini */
            transform: translate(-50%,-50%); /* Elemanın kendisini, genişliğinin ve yüksekliğinin yarısı kadar sola ve yukarıya kaydırır.
                         */
            top: 50%; /* üst kenarını, ana elemanın yüksekliğinin ortasına yerleştirir */
            left: 50%; /* sol kenarını, ana elemanın genişliğinin ortasına yerleştirir */
            border-radius: 10px;
            backdrop-filter: blur(10px); /* arka planın nasıl görüntüleneceği */
            border: 2px solid rgba(255,255,255,0.1); /* kenarlarını tanımlamak için */
            box-shadow: 0 0 40px rgba(8,7,16,0.6); /* gölge eklemek için */
            padding: 50px 35px;
        }

            form * {
                font-family: 'Poppins',sans-serif;
                color: #ffffff;
                letter-spacing: 0.5px;
                outline: none;
                border: none;
            }

            /* from içindeki başlıların özellikleri */
            form h3 {
                font-size: 32px;
                font-weight: 500;
                line-height: 42px; /* Satır yüksekliğini belirler */
                text-align: center; /* yatay olarak hizalar */
            }

        /* label özelliği */
        label {
            display: block;
            margin-top: 30px;
            font-size: 16px;
            font-weight: 500; /* Satır yüksekliğini belirler */
        }

        /* Input özellikleri */
        input {
            display: block; /* elemanının nasıl yerleştirileceği */
            height: 50px;
            width: 100%;
            background-color: rgba(255,255,255,0.07);
            border-radius: 3px; /*köşelerini yuvarlatmak için */
            padding: 0 10px;
            margin-top: 8px;
            font-size: 14px;
            font-weight: 300; /* metnin kalınlığı*/
        }

        ::placeholder {
            color: #e5e5e5;
        }

        /* buton özellikleri */
        button {
            margin-top: 50px; /* üstten boşluk */
            width: 100%;
            background-color: #ffffff;
            color: #080710;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600; /* metnin kalınlığı*/
            border-radius: 5px; /*köşelerini yuvarlatmak için */
            cursor: pointer;
        }

        /* Ekstra küçük cihazlar (telefonlar, 576px ve daha küçük) */
        media (max-width: 575.98px) {
            .background

        {
            width: 90%; /* Ekranın genişliğinin %90'ı kadar olacak */
            height: auto; /* Yükseklik otomatik ayarlanacak */
            padding: 20px; /* Formun iç kenar boşluğunu ayarla */
        }

        form {
            width: 100%; /* Formun genişliği %100 olacak */
            padding: 30px 20px; /* Form iç kenar boşluğunu ayarla */
        }

        button {
            margin-top: 30px; /* Butonun üst boşluğunu ayarla */
        }

        }

        /* Küçük cihazlar (tabletler, 768px ve daha küçük) */
        media (max-width: 767.98px) {
            /* Buraya isteğe bağlı özel stiller ekleyebilirsin */
        }

        /* Orta boy cihazlar (dizüstü bilgisayarlar, 992px ve daha küçük) */
        media (max-width: 991.98px) {
            /* Buraya isteğe bağlı özel stiller ekleyebilirsin */
        }

        /* Büyük cihazlar (masaüstü bilgisayarlar, 1200px ve daha küçük) */
        media (max-width: 1199.98px) {
            /* Buraya isteğe bağlı özel stiller ekleyebilirsin */
        }

        header {
            position: fixed; /* Header'ın sabit olmasını sağla */
            top: 0; /* Sayfanın üst kenarına yerleştir */
            left: 0; /* Sayfanın sol kenarına yerleştir */
            width: 100%; /* Header'ın genişliği %100 olsun */
            background-color: rgba(0, 0, 0, 0.8); /* Header'ın arka plan rengi */
            z-index: 1000; /* Header'ın diğer elementlerin üzerinde olmasını sağla */
            padding: 10px 20px; /* Header iç kenar boşluğunu ayarla */
        }

        /* Form stilleri */
        .background {
            margin-top: 70px; /* Formun üst boşluğunu ayarla */
            /* Diğer stiller */
        }
    </style>
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>

        <form asp-action="Login" asp-controller="Auth" method="post">
            <h3>Giriş Yap</h3>

            <div>
                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="Email adresiniz" id="username">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" placeholder="Şifreniz" id="password" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <br />

            <button type="submit">Giriş Yap</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
