@using BlogWeb.Mvc.Models.ViewModels.Article

@model ArticleModel

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strategy Pattern</title>
    <style>
        /* sayfanın gövdesi */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Sayfa içeriğini ana böümünü kapsar */
        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* başlık değerleri */
        h1 {
            font-size: 36px;
            font-weight: bold;
            color: white;
            text-align: left;
        }

        /* başlık değerleri */
        h2 {
            font-size: 25px;
            font-weight: bold;
            text-align: left;
            color: white;
        }

        /* başlık değerleri */
        #mainTitle {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        /* Resmin değerleri */
        #stragetyImage {
            display: block;
            margin: 0 auto;
            margin-top: 20px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 720px;
            height: auto;
        }

        /* İçeriğin bölümlerini tanımlayan etiket */
        section {
            margin-bottom: 40px;
        }
            /* İçeriğin bölümlerinindeki başlık değerleri */
            section h3 {
                font-size: 22px;
                font-weight: bold;
                color: white;
            }

            /* İçeriğin bölümlerinindeki başlık değerleri */
            section p {
                font-size: 20px;
                line-height: 1.5;
                color: white;
                text-align: justify;
            }
        /* Ekran boyutuna bağlı olarak farklı stil özellikleri uygular*/
        media screen and (max-width: 768px) {
        {
            font-size: 28px;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        /* Ekran boyutuna bağlı olarak farklı stil özellikleri uygular*/
        media screen and (max-width: 480px) {
        {
            font-size: 24px;
            margin-top: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <main>
        <h2 id="mainTitle">@Model.Title</h2>
        <img id="stragetyImage" src="/@Model.ImagePath" alt="stragety pattern makalesi">
        <br>
        @foreach (var articleDetail in Model.ArticleDetailModel)
        {
            <section>
                @if (articleDetail.Key == "H")
                {
                    <h2 id="">@articleDetail.Value</h2>
                }
                @if (articleDetail.Key == "I")
                {
                    <img id="stragetyImage" src="/@articleDetail.Value" alt="stragety pattern makalesi">
                }
                @if (articleDetail.Key == "BR")
                {
                    <br>
                }
                @if (articleDetail.Key == "P")
                {
                    <p>@articleDetail.Value</p>
                }
            </section>
        }
        @await Component.InvokeAsync("CommentList", new { articleId = Model.Id })
    </main>
</body>

</html>
